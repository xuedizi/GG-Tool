<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <TextView
      android:id="@+id/txtId_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Rom文件作MD5计算："
      app:layout_constraintTop_toTopOf="parent"
      />

  <EditText
      android:id="@+id/etId_path"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:hint="输入文件夹目录,根目录Sdcard"
      android:text=""
      android:textColor="@android:color/holo_red_light"
      android:textColorHint="@color/colorAccent"
      app:layout_constraintTop_toBottomOf="@id/txtId_desc"
      />

  <Button
      android:id="@+id/btnId_operate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="开始计算"
      app:layout_constraintTop_toBottomOf="@+id/etId_path"
      />


</android.support.constraint.ConstraintLayout>